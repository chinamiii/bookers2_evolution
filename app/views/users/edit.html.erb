<div class="container px-5 mt-3">
  <div class="row">
    <div class="col-md-8 px-sm-0 mx-auto">
      <h1>User info</h1>
       <%= render 'layouts/errors', model: @user %>

        <%= form_with model:@user, local:true do |f| %>

          <div class="form-group">
            <%= f.label :Name %><br>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
             <%= f.label :Image %><br>
             <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>

          <div class="form-group">
             <%= f.label :Introduction %><br>
             <%= f.text_area :introduction %>
          </div>

          <div class="form-group">
            <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User" />
          </div>
        <% end %>

    </div>
   </div>
 </div>

